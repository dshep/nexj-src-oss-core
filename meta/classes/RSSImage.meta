<Class>
   <Attributes>
      <Attribute description="The URL of the image file." name="url" required="true" type="string"/>
      <Attribute description="Describes the image, it's used in the ALT attribute of the HTML &amp;lt;img&amp;gt; tag when the channel is rendered in HTML." name="title" required="true" type="string"/>
      <Attribute description="The URL of the site, when the channel is rendered, the image is a link to the site. (Note, in practice the image &amp;lt;title&amp;gt; and &amp;lt;link&amp;gt; should have the same Attribute as the channel's &amp;lt;title&amp;gt; and &amp;lt;link&amp;gt;. " name="link" required="true" type="string"/>
      <Attribute description="The width of the image in pixels. Default 88. Max 400." name="width" type="integer"/>
      <Attribute description="The height of the image in pixels.  Default 31. Max 144." name="height" type="integer"/>
      <Attribute description="Text that is included in the TITLE attribute of the link formed around the image in the HTML rendering." name="description" type="string"/>
   </Attributes>
</Class>
